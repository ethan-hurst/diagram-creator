<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="7.0.0" />
  </ItemGroup>

  <!-- Windows-specific packages for Visio support -->
  <ItemGroup Condition="$([MSBuild]::IsOSPlatform('Windows'))">
    <PackageReference Include="Microsoft.Office.Interop.Visio" Version="15.0.4420.1017" />
  </ItemGroup>

  <!-- COM References only on Windows -->
  <ItemGroup Condition="$([MSBuild]::IsOSPlatform('Windows'))">
    <COMReference Include="Microsoft.Office.Interop.Visio">
      <Guid>{00021A98-0000-0000-C000-000000000046}</Guid>
      <VersionMajor>4</VersionMajor>
      <VersionMinor>0</VersionMinor>
      <Lcid>0</Lcid>
      <WrapperTool>primary</WrapperTool>
      <Isolated>false</Isolated>
      <EmbedInteropTypes>true</EmbedInteropTypes>
    </COMReference>
  </ItemGroup>

  <!-- Exclude Visio-related files on non-Windows platforms -->
  <ItemGroup Condition="!$([MSBuild]::IsOSPlatform('Windows'))">
    <Compile Remove="Generators\VisioGenerator.cs" />
    <Compile Remove="Generators\Components\FooterGenerator.cs" />
    <Compile Remove="Generators\Components\HeaderGenerator.cs" />
    <Compile Remove="Generators\Components\ShapeHelpers.cs" />
    <Compile Remove="Generators\PageGenerators\ChannelsPageGenerator.cs" />
    <Compile Remove="Generators\PageGenerators\DataPageGenerator.cs" />
    <Compile Remove="Generators\PageGenerators\ImplementationPageGenerator.cs" />
    <Compile Remove="Generators\PageGenerators\OverviewPageGenerator.cs" />
    <Compile Remove="Generators\PageGenerators\PersonaPageGenerator.cs" />
    <Compile Remove="Generators\PageGenerators\TechnologyPageGenerator.cs" />
  </ItemGroup>

</Project> 